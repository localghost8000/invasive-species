<div class='relative max-w-screen-lg mx-auto aspect-square flex flex-col items-center justify-center -mt-[30px] overflow-hidden'>
  <!-- Hidden H1 for SEO -->
  <h1 class='sr-only'>{{ shop.name }}</h1>

  {% if section.settings.background_image != blank %}
    <!-- Background Image as proper img element -->
    <img
      src='{{ section.settings.background_image | img_url: '2048x' }}'
      srcset='
        {{ section.settings.background_image | img_url: '1024x' }} 1024w,
        {{ section.settings.background_image | img_url: '1536x' }} 1536w,
        {{ section.settings.background_image | img_url: '2048x' }} 2048w
      '
      sizes='(min-width: 1280px) 1280px, 100vw'
      alt='{{ section.settings.background_image.alt | default: 'Hero background' }}'
      class='absolute inset-0 w-full h-full object-cover'
      loading='eager'
    >
  {% endif %}

  <div class='relative z-10 flex flex-col items-center justify-center w-full max-w-md md:max-w-6xl mx-auto px-8 py-12'>
    <div
      style='background: radial-gradient(50% 50% at 50% 50%, #FFF 43.94%, rgba(255, 255, 255, 0.00) 100%);'
      class='absolute w-[150%] h-[150%]'
    >
      &nbsp;
    </div>

    <div class='relative z-20 w-full text-center'>
      {% if section.settings.logo != blank %}
        <div class='mb-4'>
          {{ section.settings.logo | img_url: 'master' | img_tag: shop.name, 'w-full h-auto' }}
        </div>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class='max-w-[375px] mx-auto font-serif text-lg md:text-3xl uppercase text-center text-pretty mb-6 [&_br]:block [&_br]:mb-2 [&_p]:mb-4 [&_p:last-child]:mb-0'>
          {{ section.settings.description }}
        </div>
      {% endif %}

      {% if section.settings.button_text != blank and section.settings.button_url != blank %}
        <a
          href='{{ section.settings.button_url }}'
          class='inline-block font-serif uppercase px-6 py-3 bg-black text-white rounded-full hover:bg-ram-dass-blue transition-colors duration-200'
        >
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
