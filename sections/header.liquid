<header class='w-full'>
  <div class='container py-12'>
    <div class='flex items-center justify-between'>
      <!-- Logo (centered) -->
      <div class='absolute left-1/2 transform -translate-x-1/2'>
        {%- if request.page_type == 'index' -%}
          <h1>
        {%- endif -%}
        <a href='{{ routes.root_url }}'>
          {%- if settings.logo != blank -%}
            {{ settings.logo | image_url: width: 300 | image_tag: class: 'w-72', alt: shop.name }}
          {%- else -%}
            <span class='font-serif text-2xl font-medium'>{{ shop.name }}</span>
          {%- endif -%}
        </a>
        {%- if request.page_type == 'index' -%}
          </h1>
        {%- endif -%}
      </div>

      <!-- Navigation and Cart (right) -->
      <div class='ml-auto flex items-center gap-4'>
        <!-- Navigation Menu -->
        {%- assign menu = linklists['main-menu'] -%}
        {%- if menu.links.size > 0 -%}
          {%- for link in menu.links -%}
            <a
              href='{{ link.url }}'
              class='font-serif text-xl text-ram-dass-blue uppercase hover:opacity-70 transition-opacity'
            >
              {{ link.title }}
            </a>
          {%- endfor -%}
          <!-- Separator -->
          <span class='text-ram-dass-blue text-xl'>â€¢</span>
        {%- endif -%}

        <!-- Cart -->
        <a
          href='{{ routes.cart_url }}'
          class='font-serif text-xl text-ram-dass-blue uppercase hover:opacity-70 transition-opacity flex items-center gap-2'
        >
          <span>Cart</span>
          {%- if cart != empty -%}
            <span class='bg-black text-white rounded-full w-5 h-5 flex items-center justify-center text-xs'>
              {{ cart.item_count }}
            </span>
          {%- endif -%}
        </a>
      </div>
    </div>
  </div>
</header>

{%- if settings.cart_type == 'notification' -%}
  {%- render 'cart-notification' -%}
{%- endif -%}

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Navigation Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
